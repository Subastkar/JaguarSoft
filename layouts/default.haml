!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title
      = @item[:title]
    %link(rel="stylesheet" type="text/css" href="/stylesheets/stylesheet.css" media="screen")
    %meta(name="generator" content="nanoc 3.3.0")
    <script type="text/javascript">
    function showElement(layer){
    var myLayer = document.getElementById(layer);
    if(myLayer.style.display=="none"){
    myLayer.style.display="block";
    myLayer.backgroundPosition="top";
    } else { 
    myLayer.style.display="none";
    }
    }
    </script>
  %body
    %div(id="main")
      %div(id="header")
        %span(id="logo")
          %a(href="#") JagurSoft
        %span(id="logoitc")
          %a(href="www.itcolima.edu.mx") Instituto Tecnol&oacute;gico de Colima
      %div(id="menubar")
        %a(href="index.html" id="corner") Inicio
        %a(href="#") Proyectos
        %a(href="acercade.html") Acerca de ...

        %a(href="#") Soluciones Tecnol&oacute;gicas
        %a(href="#" class="button" onMouseOver="javascript:showElement('v-menu')")
          %span Comunidad
      %div(id="v-menu" style="display:none;")
        %ul
          %li
            %a(href="#") DEPI
          %li
            %a(href="grubytec.github.com") GRubyTec
      %div(id="content")
        = yield
      %div(id="footer")
        = @item[:author]
